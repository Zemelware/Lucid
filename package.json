{
  "name": "lucid",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "dev": "rm -rf .next-dev && NEXT_EXPORT_MODE=0 next dev",
    "clean": "rm -rf .next .next-build .next-dev",
    "clean:mobile": "rm -rf .next-build",
    "build": "npm run clean && NEXT_EXPORT_MODE=0 next build",
    "start": "NEXT_EXPORT_MODE=0 next start",
    "mobile:web:build": "npm run clean && NEXT_EXPORT_MODE=1 next build",
    "mobile:cap:sync": "npm run mobile:web:build && npx cap sync",
    "mobile:cap:sync:ios": "npm run mobile:web:build && npx cap sync ios",
    "mobile:cap:sync:android": "npm run mobile:web:build && npx cap sync android",
    "mobile:ios:add": "npx cap add ios",
    "mobile:android:add": "npx cap add android",
    "mobile:ios": "npm run mobile:cap:sync:ios && npx cap open ios",
    "mobile:android": "npm run mobile:cap:sync:android && npx cap open android",
    "lint": "next lint",
    "typecheck": "NEXT_EXPORT_MODE=0 next typegen && tsc --noEmit --incremental false",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@capacitor/core": "7.4.3",
    "@elevenlabs/elevenlabs-js": "^2.34.0",
    "@openrouter/sdk": "latest",
    "framer-motion": "latest",
    "lucide-react": "latest",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "latest"
  },
  "devDependencies": {
    "@capacitor/android": "7.4.3",
    "@capacitor/cli": "7.4.3",
    "@capacitor/ios": "7.4.3",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@playwright/test": "1.58.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "glob-parent": "^6.0.2",
    "jsdom": "^26.1.0",
    "msw": "^2.7.3",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^3.2.4"
  }
}
